---
import Button from './Button.astro'
import SocialNetworks from './SocialNetworks.astro'
import FormEmail from './FormEmail.astro'
import DownloadIcon from './DownloadIcon.astro'

//TODO:
//[] add highlight
---

<section id="contact" class="h-screen grid grid-cols-12 gap-x-24 gap-y-12 grid-rows-4">

  <article class="grid col-start-2 col-end-12">
    <h2 class="self-end text-2xl desktop:text-5xl font-bold">
      Contact me
      <span class="text-3xl text-primary desktop:text-5xl font-bold dark:text-accent">‚Åï</span>
    </h2>
  </article>
    
  <article class="col-start-2 col-span-4 row-span-3">
    <h3 class="text-xl mb-6">
      Send me an Email
    </h3>
    <FormEmail />
  </article>

  <article class="w-full col-span-3 row-span-3">
    <h3 class="text-xl mb-6">
      Social Networks
    </h3>
    <SocialNetworks/>
  </article>

  <article class="w-full col-span-3 row-span-3">
    <h3 class="text-xl mb-6">
      Download my CV
    </h3>
    <Button title="Download CV" style='accent'>
      <div slot="after">
        <DownloadIcon />
      </div>
    </Button>
  </article>

</section>

---
import Glow from './Glow.astro';
import Button from './Button.astro'
import { CursorAnimationWrapper } from "./CursorAnimationWrapper.tsx"

---

<section id="home" class="h-screen py-5 grid place-content-center gap-24 grid-rows-2 p-5 tablet:p-10 laptop:p-0 laptop:grid-rows-1 laptop:grid-cols-12">
  <article class="flex flex-col justify-center laptop:col-start-2 laptop:col-span-5">
    <div class="relative">
      <h2 class="text-2xl desktop-xl:text-4xl">Hey! I'm
        <span class="text-3xl desktop-xl:text-5xl font-bold text-accent">⁕</span>
      </h2>
      <Glow class="absolute -translate-x-1/2 -translate-y-1/2 left-12"/>
    </div>
    <h1 class="text-3xl font-bold tablet:text-4xl desktop-xl:text-5xl">Javier Díaz</h1>
    <p class="text-base max-w-prose text-pretty my-4">
      Web Developer and IT student creating user-centric websites.
      Explore my portfolio for a glimpse into the dynamic world
      of digital innovation.
    </p>
    <div class="flex flex-col gap-6 tablet:flex-row">
      <CursorAnimationWrapper client:load cursor="link">
        <Button title="See projects" style="primary"/>
      </CursorAnimationWrapper>
      <CursorAnimationWrapper client:load cursor="download">
        <Button title='Download CV' style='secondary'/>
      </CursorAnimationWrapper>
    </div>
  </article>
  <div class="self-center h-1/2 laptop:col-span-5 bg-accent">
  </div>
</section>

---
import TechIcons from './TechIcons.astro'
import type { Project } from '../types.d.ts'

const {title, date, techStack, desc}: Project = Astro.props

/*
  <p class="col-span-7 content-center ">
    {date}
  </p>
*/

---

<article class="grid grid-cols-10 items-center h-fit gap-12 p-4 text-base border-b-[1px] border-white">
    
  <h3 class="col-span-3 max-w-sm text-xl font-bold">{title}</h3>
  
  <div class="flex flex-col col-span-3 gap-4">
    <h4 class="text-lg font-bold">Tech Stack</h4>
    <div class="flex gap-6">
      {
        techStack.map(({type}) => (
          <TechIcons type={type} className="size-10"  />        
        ))
      }
    </div>
  </div>

  <div class="grid col-span-4  gap-4">
    <h4 class="text-lg font-bold">Description</h4>
    <div>
      <p class="max-w-xl text-pretty">
        {desc}
      </p>
    </div>
  </div>


</article>



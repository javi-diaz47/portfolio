import ProjectCard from './ProjectCard.astro'
import Button from './Button.astro'
import {CursorAnimationWrapper} from './CursorAnimationWrapper.tsx'
import {PROJECTS} from '../mockups/projects'

const projects = PROJECTS
---

<section id="projects" class="h-screen flex items-center gap-24 ">

  <div class="grid grid-cols-12 gap-x-24">

    <article class="flex items-center col-start-2 col-end-12 pb-16">
      <h2 class="text-2xl desktop:text-5xl font-bold">
        Projects
        <span class="text-3xl text-primary desktop:text-5xl font-bold dark:text-accent">‚Åï</span>
      </h2>
    </article>

    <article class="col-start-2 col-end-12">
      {
        projects.map(({title, date, techStack, desc}) => (
          <div class="col-start-2 col-end-12">
            <ProjectCard 
              title={title}
              date={date} 
              techStack={techStack} 
              desc={desc}
            />
          </div>
        ))
      }
    </article>
    
    <article class="col-start-2 col-end-12 flex h-full after:absolute after:w-full after:border-t-[1px] after:border-black after:dark:border-white after:left-0">
      <div class="w-full pt-16 flex justify-center items-center">
      <CursorAnimationWrapper client:load cursor="link">
        <Button title='See all projects' style='secondary'/>
      </CursorAnimationWrapper>
 
      </div>
    </article>

  </div>

</section>

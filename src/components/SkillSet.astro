---
import TechIcons from './TechIcons.astro'

interface Props {
  title: string
  icons: string[]
}

const {title, icons} = Astro.props
---

<div class="flex flex-col gap-6 p-6 rounded-3xl bg-secondary-light">
  <h5 class="text-black font-bold text-xl">{title}</h5>
  <div class="flex gap-4 justify-between items-center">
    {
      icons.map((name) => (
        <TechIcons type={name} className="size-14"/>
      ))
    }
  </div>
</div>


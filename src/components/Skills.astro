---
import SkillSet from './SkillSet.astro'

const techIcons = {
  tools: ['git' , 'github' , 'figma'],
  languages: [ 'js' , 'ts' , 'python' , 'html', 'css'],
  frameworks: ['react', 'svelte', 'nextjs', 'astro', 'tailwind'],
  devTools: ['playwright', 'archlinux', 'supabase']
}

//TODO:
